[flake8]
# Temporary ignore for CI/CD stability
# TODO: Remove these ignores and fix underlying issues
ignore = E501,F401,F841,F811,W503,E203,E228,F541,E226,C901
max-line-length = 88
max-complexity = 10

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    htmlcov,
    .pytest_cache

per-file-ignores =
    tests/*:F401,F811,F841
    __init__.py:F401
