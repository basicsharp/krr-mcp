# KRR MCP Server - Docker Environment Configuration
# Copy this file to .env and customize for your environment

# Build Configuration
BUILD_VERSION=0.1.0
BUILD_DATE=2025-01-31
VCS_REF=latest
TAG=latest

# Server Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
SERVER_PORT=8080

# Kubernetes Configuration
KUBERNETES_CONTEXT=default
# KUBECONFIG=/path/to/your/kubeconfig

# Prometheus Configuration (for krr)
PROMETHEUS_URL=http://prometheus:9090

# Grafana Configuration (for monitoring profile)
GRAFANA_PASSWORD=admin

# Safety Configuration
KRR_MCP_CONFIRMATION_TIMEOUT_MINUTES=5
KRR_MCP_MAX_RESOURCE_CHANGE_PERCENT=500
KRR_MCP_ENABLE_DRY_RUN_BY_DEFAULT=true

# Security Configuration
KRR_MCP_ENABLE_AUDIT_LOGGING=true
KRR_MCP_LOG_SENSITIVE_DATA=false
